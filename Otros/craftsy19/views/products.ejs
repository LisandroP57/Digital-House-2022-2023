<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head',{
    title : 'Productos'
}) %>

    <body class="">
        <%- include('./partials/header') %>
    
            <main class="container mt-3">
             

                <section class="row">
                  <h3 class="alert alert-light">Todos los productos</h3>
                  <div class="card">
                    <div class="card-body table-responsive">
                        <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</th>
