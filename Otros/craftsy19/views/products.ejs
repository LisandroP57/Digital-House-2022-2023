                                <th scope="col">Marca</th>
                                <th scope="col">Acciones</th>
                              </tr>
                            </thead>
                            <tbody>

                                <% products.forEach(({image,name,price, discount, category, brand,id})=> { %>
                                    <tr>
                                        <th scope="row"><%= id %></th>
                                        <td><%= name %></td>
                                        <td><%= price %></td>
                                        <td><%= discount %></td>
                                        

                                        <td><%= category %></td>
                                        <td><%= brand %></td>
                                        <td>

                                            <div class="d-flex justify-content-end gap-2">
                                                <a class="btn btn-primary" href="/products/detail/<%= id %>"><i class="fas fa-eye"></i></a>
                                                <a class="btn btn-success" href="/products/edit/<%= id %>"><i class="fas fa-edit"></i></a>
                                                <form action="">
                                                  <button class="btn btn-danger" type="su
                                                  "><i class="fas fa-trash"></i></button>
                                                </form>
                                                
                                              </div>
                                        </td>

                                      </tr>
                                      
                                    </div>
                                    <% }) %>
                              
                           
                            </tbody>
                          </table>
                    </div>
                  </div>

              

                 

                      
            
              
                </section>
           
               
            </main>
            <%- include('./partials/footer') %>
            <%- include('./partials/scripts') %>

    </body>

</html>